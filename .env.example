# =============================================================================
# Elite Dangerous Mining Data Server - Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your environment
# This file supports both development and production modes

# =============================================================================
# ENVIRONMENT CONTROL
# =============================================================================
# ENV_MODE controls which services are started and how they're configured
# Options: development, staging, production
ENV_MODE=development

# Node.js Environment
NODE_ENV=development

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Server Port
PORT=3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# =============================================================================
# DATABASE CONFIGURATION (MongoDB 8.0)
# =============================================================================
# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/elite_mining
MONGODB_DB_NAME=elite_mining
MONGODB_PORT=27017
MONGODB_MAX_CONNECTIONS=100
MONGODB_CACHE_SIZE_GB=2

# MongoDB Authentication (leave empty for development without auth)
MONGO_ROOT_USERNAME=
MONGO_ROOT_PASSWORD=

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================
# EDDN (Elite Dangerous Data Network)
EDDN_RELAY_URL=tcp://eddn.edcd.io:9500
EDDN_RECONNECT_INTERVAL=30000

# Inara API
INARA_API_URL=https://inara.cz/inapi/v1/
INARA_API_KEY=your_inara_api_key_here
INARA_APP_NAME=EliteMiningDataServer
INARA_APP_VERSION=1.0.0

# EDSM API
EDSM_API_URL=https://www.edsm.net/api-v1/
EDSM_API_KEY=your_edsm_api_key_here

# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================
CACHE_DURATION_MINUTES=15
MAX_CACHE_ENTRIES=10000

# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# MongoDB Express (Admin Interface)
MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=changeme123

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Only required when ENV_MODE=production

# SSL/HTTPS Configuration (Let's Encrypt)
ACME_EMAIL=your-email@example.com
ELITE_MINING_DOMAIN=mining.yourdomain.com

# Production Database Authentication
# MONGO_ROOT_USERNAME=admin
# MONGO_ROOT_PASSWORD=your_secure_password_here

# =============================================================================
# DOCKER ENVIRONMENT VARIABLES
# =============================================================================
# These are automatically used by docker-compose.yml
COMPOSE_PROJECT_NAME=elite-mining
COMPOSE_HTTP_TIMEOUT=120

# =============================================================================
# OAuth / Authentication
# =============================================================================
# Frontier OAuth2 configuration (register your application with Frontier and set these values)
FRONTIER_CLIENT_ID=
FRONTIER_CLIENT_SECRET=
FRONTIER_CALLBACK_URL=http://localhost:3000/auth/frontier/callback
FRONTIER_AUTH_URL=
FRONTIER_TOKEN_URL=
FRONTIER_PROFILE_URL=

# Session secret for express-session (set a secure value in production)
SESSION_SECRET=change-me-in-production